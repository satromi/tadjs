{
  "name": "tadjs-desktop",
  "version": "0.33.0",
  "description": "TADjs Desktop Environment with Plugin System",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64",
    "build:mac": "electron-builder --mac --x64",
    "build:mac-arm": "electron-builder --mac --arm64",
    "build:mac-universal": "electron-builder --mac --universal",
    "package": "electron-packager . \"TADjs Desktop\" --platform=win32 --arch=x64 --out=dist --overwrite --icon=tadjs.ico --executable-name=tadjs_desktop --ignore=\"^/(dist.*|\\.git|\\.vscode|\\.serena|\\.claude|designlog|xtaddata|CLAUDE\\.md|DEVELOPMENT_NOTES\\.md|tmpclaude.*|.*\\.ps1)$\" --prune=true",
    "package:mac": "electron-packager . \"TADjs Desktop\" --platform=darwin --arch=x64 --out=dist --overwrite --ignore=\"^/(dist.*|\\.git|\\.vscode|\\.serena|\\.claude|designlog|xtaddata|CLAUDE\\.md|DEVELOPMENT_NOTES\\.md|tmpclaude.*|.*\\.ps1)$\" --prune=true",
    "package:mac-arm": "electron-packager . \"TADjs Desktop\" --platform=darwin --arch=arm64 --out=dist --overwrite --ignore=\"^/(dist.*|\\.git|\\.vscode|\\.serena|\\.claude|designlog|xtaddata|CLAUDE\\.md|DEVELOPMENT_NOTES\\.md|tmpclaude.*|.*\\.ps1)$\" --prune=true",
    "postpackage": "node scripts/postpackage.js",
    "postinstall": "node scripts/patch-font-list.js"
  },
  "keywords": [
    "tadjs",
    "desktop",
    "tad",
    "electron"
  ],
  "author": "satromi",
  "license": "MIT",
  "homepage": "https://github.com/satromi/tadjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/satromi/tadjs.git"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.tadjs.desktop",
    "productName": "TADjs Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "tadjs-desktop.html",
      "tadjs-desktop.css",
      "tadjs-desktop.js",
      "tad.js",
      "lh5.js",
      "encoding.js",
      "encoding.min.js",
      "pages15.js",
      "favicon.svg",
      "JIS0208.txt",
      "plugins/**/*",
      "tad_data/**/*",
      "js/**/*",
      "data/**/*",
      "!node_modules/**/*",
      "!**/node_modules/**/*",
      "!**/*.map"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "signingHashAlgorithms": [],
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.productivity",
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "forceCodeSigning": false
  },
  "dependencies": {
    "font-list": "^2.0.1",
    "fontkit": "^2.0.4"
  },
  "optionalDependencies": {
    "winreg": "^1.2.5"
  }
}
