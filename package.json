{
  "name": "tadjs-desktop",
  "version": "0.36.0",
  "description": "TADjs Desktop Environment with Plugin System",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64",
    "build:mac": "electron-builder --mac --x64",
    "build:mac-arm": "electron-builder --mac --arm64",
    "build:mac-universal": "electron-builder --mac --universal",
    "package": "electron-packager . \"TADjs Desktop\" --platform=win32 --arch=x64 --out=dist --overwrite --icon=tadjs.ico --executable-name=tadjs_desktop --ignore=\"^/dist$|^/\\.git$|^/\\.vscode$|^/\\.serena$|^/\\.claude$|^/designlog$|^/xtaddata$|^/scripts$|^/upload$|^/encoding\\.js-|^/ecl_array\\.js-master$|^/CLAUDE\\.md$|^/DEVELOPMENT_NOTES\\.md$|tmpclaude|\\.ps1$\" --prune=true && node scripts/postpackage.js",
    "package:mac": "electron-builder --mac --x64 --dir",
    "package:mac-arm": "electron-builder --mac --arm64 --dir",
    "postinstall": "node scripts/patch-font-list.js"
  },
  "keywords": [
    "tadjs",
    "desktop",
    "tad",
    "electron"
  ],
  "author": "satromi",
  "license": "MIT",
  "homepage": "https://github.com/satromi/tadjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/satromi/tadjs.git"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "electron": "^40.2.1",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "jsmediatags": "^3.9.7",
    "prebuild-install": "^7.1.3",
    "rcedit": "^5.0.2"
  },
  "build": {
    "appId": "com.tadjs.desktop",
    "productName": "TADjs Desktop",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "tadjs.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "forceCodeSigning": false
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "font-list": "^2.0.1",
    "fontkit": "^2.0.4"
  },
  "optionalDependencies": {
    "node-pty": "^1.1.0",
    "winreg": "^1.2.5"
  }
}
